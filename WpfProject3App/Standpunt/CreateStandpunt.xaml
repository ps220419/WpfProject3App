<Window x:Class="WpfProject3App.CreateStandpunt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfProject3App"
        mc:Ignorable="d"
        Title="CreateStandpunt" Height="450" Width="800">
    <StackPanel>
        <DockPanel Margin="0,5">
            <TextBlock Width="100" Text="Partij naam:"/>
            <ComboBox HorizontalAlignment="Left" Width="200" x:Name="cbPartijNaam">
                <ComboBoxItem></ComboBoxItem>
            </ComboBox>
        </DockPanel>
        <DockPanel Margin="0,5">
            <TextBlock Width="100" Text="Thema:"/>
            <ComboBox HorizontalAlignment="Left" Width="200" x:Name="cbThema">
                <ComboBoxItem></ComboBoxItem>
            </ComboBox>
        </DockPanel>
        <DockPanel Margin="0,5">
            <TextBlock Width="100" Text="Standpunt:"/>
            <TextBox HorizontalAlignment="Left" Width="200" x:Name="tbStandpunt"/>
        </DockPanel>
        <Button Width="100" Height="25" Margin="120,0" HorizontalAlignment="Left" Background="Green" Content="Add" Click="Create_Click"/>
    </StackPanel>

</Window>
